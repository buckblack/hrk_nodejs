    <script>
        dateFrom.value=new Date(Date.now()).toISOString().split('T')[0]
        dateTo.value=new Date(Date.now()).toISOString().split('T')[0]
    </script>
    <script>
        Highcharts.setOptions({
            lang: {
                numericSymbols: [` Ngàn`, ` Triệu`],
                numericSymbolMagnitude: 1000,
                decimalPoint: ',', ///phân cách thập phân
                thousandsSep: '.' ///hàng ngàn
            },
            chart: {
                style: {
                    fontFamily: `tahoma`, /// chỉnh font cho chữ thống dc đúng
                    fontSize: 16
                }
            }
        })
        Highcharts.chart('Th_Bieu_do', {
            chart: {
                type: 'column', // bar , column, line, pie
                plotBorderWidth: 1
            },
            title: {
                text: 'Tiêu đề Biểu đồ',
                align: 'center',
                style: {
                    color: 'red',
                    fontWeight: 'bold',
                    fontSize: '1.5rem'
                },
                y: 20
            },
            subtitle: {
                text: 'Tiêu đề Phụ'
            },
            xAxis: {
                categories: ['Táo', 'Chuối', 'Cam', 'Chanh']
            },
            yAxis: {
                title: {
                    text: 'Số lượng Bán',

                    style: {
                        color: 'blue',
                        fontWeight: 'bold',
                        fontSize: '1rem'
                    }

                }
            },
            series: [{
                    name: 'Tèo',
                    data: [1, 0, 4, 10],
                    color: 'red'
                }, {
                    name: 'Tý',
                    data: [5, 7, 3, 0],
                    color: 'green'
                },
                {
                    name: 'Mận',
                    data: [0, 0, 0, 10],
                    color: 'blue'
                }
            ]

        });
    </script>