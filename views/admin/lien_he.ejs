<% include layout/head %>
<% include layout/header %>
<% include layout/sidebar %>
<section class="wrapper p-0">
    <div class="table-agile-info p-0">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách liên hệ
            </div>
            <nav class="navbar navbar-expand-lg navbar-light bg-light py-0">
                <div class="input-group w-auto m-2">

                </div>
            </nav>
            <table id="table_lien_he"
                class="table table-striped table-bordered bg-light table-hover d-md-table table-responsive-sm"
                style="width:100%">
                <thead>
                    <tr>

                        <th>Tên</th>
                        <th>Điện thoại</th>
                        <th>Email</th>
                        <th>Ngày</th>
                        <th>Nội dung</th>

                    </tr>
                </thead>
                <tbody>
                <% lien_he.forEach(row => { %>
                    <tr>
                        <td><%=row.ho_ten%></td>
                        <td><%=row.dien_thoai%></td>
                        <td><%=row.email%></td>
                        <td><%=row.ngay_tao%></td>
                        <td><%=row.noi_dung%></td>
                    </tr>
                <% }) %>
                    
                </tbody>
            </table>
        </div>
    </div>
    <% include layout/footer %>
<script>
    $('#table_lien_he').DataTable();
    document.getElementById('table_lien_he_filter').classList.add('w-100')
    document.getElementById('table_lien_he_filter').classList.add('text-right')
    document.getElementById('table_lien_he_wrapper').classList.add('pb-4')
</script>
