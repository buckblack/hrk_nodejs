<% include layout/head %>
<% include layout/header %>
<% include layout/sidebar %>
<title>Gear Store Admin | Liên hệ</title>
    <div class="table-agile-info p-0">
        <div class="panel panel-default">
<a class="h2" href="#">Danh sách liên hệ</a>
            <table id="table_lien_he"
                class="table table-striped table-bordered bg-light table-hover d-md-table table-responsive-sm"
                style="width:100%">
                <thead>
                    <tr>

                        <th>Tên</th>
                        <th>Điện thoại</th>
                        <th>Email</th>
                        <th>Ngày</th>
                        <th>Nội dung</th>

                    </tr>
                </thead>
                <tbody>
                <% lien_he.forEach(row => { %>
                    <tr>
                        <td><%=row.ho_ten%></td>
                        <td><%=row.dien_thoai%></td>
                        <td><%=row.email%></td>
                        <td><%=row.ngay_tao%></td>
                        <td><%=row.noi_dung%></td>
                    </tr>
                <% }) %>
                    
                </tbody>
            </table>
        </div>
    </div>
    <% include layout/footer %>
<script>
    $('#table_lien_he').DataTable();
    document.getElementById('table_lien_he_filter').classList.add('float-right')
    document.getElementById('table_lien_he_filter').classList.add('form-inline')
    document.getElementById('table_lien_he_length').classList.add('form-inline')
    document.getElementById('table_lien_he_filter').classList.add('mb-2')
    document.getElementById('table_lien_he_length').classList.add('mb-2')
    document.getElementById('table_lien_he_wrapper').classList.add('pb-4')
</script>
