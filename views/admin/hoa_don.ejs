                        <div class="col-sm-12">

                        </div>
                        <div class="col-sm-12">
                            <table class="table table-striped table-hover table-bordered table-responsive d-lg-table">
                                <thead>
                                    <tr>
                                        <th>Mã sản phẩm</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Số lượng</th>
                                        <th>Giá bán</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                </thead>
