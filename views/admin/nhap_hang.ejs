                    </select>
                </div>
                <div class="form-group">
                    <label for="">Thương hiệu</label>
                    <select class="form-control" name="" id="">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Tên sản phẩm</label>
                    <select class="form-control" name="" id="">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Giá bán</label>
                    <input type="number" readonly class="form-control" name="ho_ten" id="ho_ten">
                </div>
                <div class="form-group">
